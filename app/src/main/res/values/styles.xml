<resources>

    <!-- Base application theme. -->
    //Changed DarkActionBar to NoActionBar to remove title

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Basic styling for the buttons. -->
    <style name="SearchButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for toggle button -->
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_favorite_button_background</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
    <item name="android:textOff"></item>
</style>
</resources>
