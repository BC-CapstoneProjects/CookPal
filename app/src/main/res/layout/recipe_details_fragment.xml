                <TextView
                    android:id="@+id/recipe_ingredients_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_bold"
                    android:gravity="start"
                    android:text="Ingredients"
                    android:textColor="#4E5156"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_image"></TextView>

                <TextView
                    android:id="@+id/recipe_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:gravity="start"
                    android:text="@{viewModel.selectedRecipe.ingredients.toString()}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_ingredients_header"></TextView>

                <TextView
                    android:id="@+id/recipe_instructions_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_bold"
                    android:gravity="start"
                    android:text="Instructions:"
                    android:textColor="#4E5156"
                    app:layout_constraintLeft_toLeftOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/recipe_ingredients"></TextView>

                <TextView
                    android:id="@+id/recipe_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:gravity="start"
                    android:text="@{viewModel.selectedRecipe.steps.toString()}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/speak_recipe_instructions_button"></TextView>

