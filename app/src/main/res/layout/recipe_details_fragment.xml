                    android:gravity="start"
                    android:text="Summary:"
                    android:textColor="#4E5156"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_image"></TextView>

                <TextView
                    android:id="@+id/recipe_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:gravity="start"
                    android:text="@{viewModel.selectedRecipe.summary}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_summary_header"></TextView>
