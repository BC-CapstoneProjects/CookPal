<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        tools:context=".home_screen.HomeScreenFragment">

        <!--Drink button settings-->
        <ImageButton
            android:id="@+id/drinksButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="175dp"
            android:layout_toEndOf="@+id/burgerButton"
            android:background="#00000000"
            android:contentDescription="@+string/drinks button"
            app:srcCompat="@drawable/ic_drinks_button" />

        <!--Burger Button settings-->
        <ImageButton
            android:id="@+id/burgerButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="175dp"
            android:layout_toEndOf="@+id/RiceButtton"
            android:background="#00000000"
            android:contentDescription="@+string/burger button"
            app:srcCompat="@drawable/ic_burgerbutton" />

        <!--Background banner-->
        <ImageView
            android:id="@+id/greyBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@+string/Grey banner"
            app:srcCompat="@drawable/ic_rectangle_1"
            tools:ignore="ImageContrastCheck" />

        <!--All Foods Button settings-->
        <ImageButton
            android:id="@+id/allFoodsButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="175dp"
            android:background="#00000000"
            android:contentDescription="@+string/all foods button"
            app:srcCompat="@drawable/ic_allfoodsbutton" />

        <!--Rice Button settings-->
        <ImageButton
            android:id="@+id/RiceButtton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="175dp"
            android:layout_toEndOf="@+id/allFoodsButton"
            android:background="#00000000"
            android:contentDescription="@+string/rice button"
            app:srcCompat="@drawable/ic_new_rice_button" />

        <!--Slogan settings-->
        <TextView
            android:id="@+id/Slogan"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/sofia_pro_bold"
            android:text="Find your next favorite recipe"
            android:textColor="#000000"
            android:textSize="32sp"
            tools:ignore="HardcodedText"/>

        <!--Profile button settings-->
        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@+string/profile button"
            app:srcCompat="@drawable/ic_profile"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Search button settings-->
        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="#00000000"
            android:contentDescription="@+string/search button"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_search"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

</layout>